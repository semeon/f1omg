
.f1omg_contenttable {
	width: 100%;
	border: 0px solid grey;
	border-spacing: 0px;
	border-collapse: separate;
}


.f1omg_contenttable tr td {
	border: 0px solid grey;
	vertical-align: top;
	padding: 10px;
}

.f1omg_datatable {
	width: 90%;
	border: 0px solid grey;
	border-spacing: 0px;
	border-collapse: collapse;
	color: <%= @main_color %>;
	font-size: 12px;
}

.f1omg_datatable tr td {
	border: 0px solid grey;
	padding: 4px;
	padding-left: 10px;
	margin: 0px;
}


tr.f1omg_th {
	border-bottom: 1px solid <%= @main_color %>;
	font-weight: bold;
}
 
hr.f1omg_hr {
	color: <%= @main_color %>;
	background-color: <%= @main_color %>;
	height: 1px;
	border: 0px solid black;
	padding: 0px;
	margin: 0px;
	margin-bottom: 10px;
	margin-top: 1px;
}

h4.f1omg {
	color: <%= @main_color %>;
	padding: 0px;
	padding-left: 10px;
	margin: 0px;
}

tr.f1omg_highlighted {
	font-weights: bold;
	border: 0px solid <%= @main_color %>;
	background-color: <%= @highlight_color %>;
	
}

div.f1omg_alignedright {
    text-align: right;
}