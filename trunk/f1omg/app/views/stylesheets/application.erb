body {
	font-family: <%= @main_font %>;
	background: <%= @body_background %>;
	margin: 0px;
	text-align: center;
}

div#f1omg_body {
	border: 0px solid black;
	padding: 0px;
	margin: 0px;
	text-align: center;
}

div#f1omg_toprow {
	border: 0px solid black;
	padding-right: 30px;
	margin: 0px;
	text-align: right;
	font-size: 12px;
}

div#f1omg_header {
	border: 0px solid black;
	border-bottom: 1px solid <%= @main_color %>;
	border-top: 1px solid grey;
	padding: 0px;
	margin: 0px;
	text-align: center;
	vertical-align: bottom;
    background-image: url("/images/f1omg_back.png");
    background-repeat: repeat;
    background-position: top left;

}

div#f1omg_subheader {
	border: 0px solid grey;
	border-bottom: 0px solid grey;
	border-top: 0px solid grey;
	padding: 0px;
	margin: 0px;
	text-align: center;
	vertical-align: bottom;
/*    background: lightgrey; */
}

#f1omg_logo {
	border: 0px solid <%= @main_color %>;

}

div#f1omg_navbar {
	border: 0px solid <%= @main_color %>;
    background-image: url("/images/f1omg_logo.png");
    background-repeat: no-repeat;
    background-position: top left;
	padding-top: 60px;
	padding-bottom: 0px;
	width: <%= @content_width %>;
	margin-left: auto;
	margin-right: auto;
	text-align: right;
	vertical-align: bottom;

}

.f1omg_menuitem {
	border: 0px solid grey;
	text-align: center;
	padding: 0px;
	margin-left: 5px;
	margin-right: 5px;
	display: inline;
	font-size: 12px;
	font-weight: bold;	
}

.f1omg_menuitem a {
	color: #ccccff;
}

div#f1omg_loginbar {
	border: 0px solid grey;
	padding-top: 0px;
	padding-bottom: 0px;
	margin: 0px;
	width: <%= @content_width %>;
	height: 19px;
	margin-left: auto;
	margin-right: auto;
	text-align: right;
	vertical-align: top;

}

.f1omg_loginbaritem {
	border: 0px solid grey;
	text-align: center;
	padding: 0px;
	margin: 0px;
	margin-left: 5px;
	margin-right: 5px;
	display: inline;
	font-weight: normal;
	color: grey;	
	font-size: 10px;
}

.f1omg_loginbaritem a {
	color: grey;
	font-size: 10px;
}


div#f1omg_content {
	border: 0px solid grey;
	padding: 0px;
	padding-top: 20px;
	width: <%= @content_width %>;
	margin-left: auto;
	margin-right: auto;
	text-align: left;

}

div#f1omg_footer {
	border: 0px solid <%= @main_color %>;
	border-top: 1px solid <%= @main_color %>;
	border-bottom: 0px solid <%= @main_color %>;
	padding: 0px;
	margin: 0px;	
	margin-top: 30px;
	text-align: center;
	font-size: 12px;
/*
	background: <%= @panel_backround %>;

*/}


div.f1omg_flash_notice {
	font-size: 12px;
	color: green;
}

div.f1omg_flash_error {
	font-size: 12px;
	color: red;
}

a {
    font-size: 12px;
}

